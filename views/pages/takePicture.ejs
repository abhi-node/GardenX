<!DOCTYPE html>
<html>
    <head>
        <title>Upload a Picture</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    </head>
    <body>
        <h1><%= message %></h1>
        <video autoplay="true" id="cameraStream" muted playsinline>Camera stream unavaliable</video>
        <form action="/root/uploadPicture" enctype="multipart/form-data" method="POST">
            <input type="file" name='image' accept="image/*" capture="camera">
            <button type="submit">Take a picture</button>
        </form>


        <script type="text/javascript">
            var video = document.querySelector('#cameraStream');
            //Webcam stream
            if(navigator.mediaDevices.getUserMedia){
                navigator.mediaDevices.getUserMedia({video:true})
                    .then(function(stream){
                        if("srcObject" in video){ //Browser compatibility check
                            video.srcObject = stream;
                        }else{ //Use older method
                            video.src = window.URL.createObjectURL(stream)
                        }
                    })
                    .catch(function(err){
                        console.error("Error with video stream, ", err)
                    })
            }
        </script>
    </body>
</html>